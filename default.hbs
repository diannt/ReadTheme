<!doctype html>
<html>
  <head>
  
	{{! Document Settings }}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	
	{{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="author" content="{{author.name}}">

    <meta name="description" content="{{meta_description}}" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--[if lt IE 9]>
      <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
	{{! Styles'n'Scripts }}
    <link rel="stylesheet" href="{{@blog.url}}/assets/css/screen.css">
	<link href='http://fonts.googleapis.com/css?family=PT+Serif:400,700' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
	<link rel="shortcut icon" href="{{@blog.url}}/assets/images/favicon.ico">
	
	{{! Ghost style and meta data with this tag }}
    {{ghost_head}}
  </head>
  <body>
	<!-- BEGIN HEADER -->
    {{#if @blog.logo}}
		<header class="bg-dark header-padding">
		<a href="{{@blog.url}}"><img class="site-logo no-margin padding-top padding-bottom" src="{{@blog.logo}}"></a>
		<h4 class="sans-serif caps title-spacing tagline center">A Quest for perfect readability</h4>
		</header>
			{{else}}
				{{#if @blog.title}}
				<header class="bg-dark header-padding">
				<h1 class="h1 no-margin site-logo-text mega center lh-1 padding-top padding-bottom"><a class="site-logo-text" href="{{@blog.url}}">{{@blog.title}}</a></h1>
				<h4 class="sans-serif caps title-spacing tagline center">{{@blog.description}}</h4>
				</header>
				{{/if}}
    {{/if}}
    <!-- END HEADER -->
	
	{{! Everything else gets inserted here }}
    {{{body}}}
	

	<!-- BEGIN FOOTER -->
	<footer class="site-footer center">
		<!-- <a class="caps title-spacing text-link" href="" title="">Github</a> -->
		<a class="caps title-spacing text-link" href="https://twitter.com/madeforghost" title="Made For Ghost @ Twitter"  target="_blank">Twitter</a>
		<br>
		<a class="meta text-link" href="http://madeforghost.com/" title="MadeForGhost - Ghost Themes" target="_blank">"Read" Ghost Theme - by MadeForGhost</a>
		<!-- <br><a class="meta text-link" href="{{@blog.url}}" title="">&copy; {{@blog.title}}</a> -->
	</footer>
    
	{{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

    {{! Javascripts }}
	<script src="{{@blog.url}}/assets/js/hide-address-bar.js"></script>
    <script src="{{@blog.url}}/assets/js/scale.fix.js"></script>
	<!-- END FOOTER -->
	
</body>
</html>
	
	
	
	
	